{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "diagnostics": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es6", "es7", "es2017.object"],
    "module": "esnext",
    "moduleResolution": "node",

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "downlevelIteration": true,

    "pretty": true,
    "removeComments": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
